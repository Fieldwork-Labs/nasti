{
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "preview": "turbo run preview",
    "prepare": "husky",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx,css,scss,html,md,json}": "prettier --ignore-unknown --write --semi=false",
    "apps/web/**/*.{js,ts,jsx,tsx}": "eslint --fix --max-warnings 0",
    "packages/ui/**/*.{ts,tsx,js,jsx,css,scss,html,md,json}": "prettier --ignore-unknown --write --semi=false",
    "packages/ui/**/*.{js,ts,jsx,tsx}": "eslint --fix --max-warnings 0"
  },
  "prettier": {
    "semi": false,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nasti/eslint-config": "workspace:*",
    "eslint": "^9.11.1",
    "prettier-plugin-tailwindcss": "^0.6.9"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.10"
  },
  "resolutions": {
    "@types/react": "^18.3.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "0.32.6",
    "sharp-ico": "0.1.5"
  },
  "packageManager": "pnpm@8.10.5"
}
