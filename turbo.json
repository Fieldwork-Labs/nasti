{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["VITE_*", "FRONTEND_URL", "MAILGUN_API_KEY", "MAILGUN_DOMAIN"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "preview": {
      "dependsOn": ["build"],
      "persistent": true,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
